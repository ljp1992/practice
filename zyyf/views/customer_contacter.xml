<odoo>
  <data>
    <!-- 联系人 tree -->
    <record model="ir.ui.view" id="customer_contacter_tree">
      <field name="name">customer_contacter_tree</field>
      <field name="model">customer.contacter</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="position"/>
          <field name="email"/>
          <field name="phone"/>
          <!--<field name="cellphone"/>-->
          <!--<field name="chuanzhen"/>-->
          <!--<field name="skype"/>-->
          <!--<field name="msn"/>-->
          <!--<field name="qq"/>-->
          <!--<field name="wechat"/>-->
          <!--<field name="whatsapp"/>-->
          <!--<field name="note"/>-->
        </tree>
      </field>
    </record>

    <!-- 联系人 form -->
    <record id="customer_contacter_form" model="ir.ui.view">
        <field name="name">customer_contacter_form</field>
        <field name="model">customer.contacter</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="姓名" nolabel="1" required="1"/>
                        </h1>
                        <h3>
                            <field name="position" placeholder="职位" nolabel="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="email" widget="email"/>
                            <field name="phone"/>
                            <field name="cellphone"/>
                            <field name="chuanzhen"/>
                        </group>
                        <group>
                            <field name="skype"/>
                            <field name="whatsapp"/>
                            <field name="wechat"/>
                            <field name="qq"/>
                            <field name="other"/>
                        </group>
                        <group>
                            <!--<field name="customer_id" required="1"/>-->
                            <field name="primary"/>
                        </group>
                        <!--<group string="时区">-->
                            <!--<field name="time_zone"/>-->
                            <!--<field name="now_time"/>-->
                        <!--</group>-->
                    </group>
                    <notebook>
                        <page string="备注">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--联系人 search-->
    <record id="customer_contacter_search" model="ir.ui.view">
        <field name="name">customer_contacter_search</field>
        <field name="model">customer.contacter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="position"/>
            </search>
        </field>
    </record>

    <!--联系人 action-->
    <record id="customer_contacter_act" model="ir.actions.act_window">
        <field name="name">联系人</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.contacter</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>