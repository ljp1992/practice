<odoo>
  <data>
      <!-- 设置 form -->
      <record id="customer_configuration_form" model="ir.ui.view">
          <field name="name">configuration_form</field>
          <field name="model">configuration</field>
          <field name="arch" type="xml">
              <form create="false" delete="false" string="">
                  <group string="客户">
                      <field name="customer_name_unique"/>
                      <field name="customer_website_unique"/>
                      <field name="import_customer_data" widget="radio"/>
                  </group>
                  <group string="联系人">
                      <field name="contacter_name_unique"/>
                      <field name="contacter_email_unique"/>
                      <field name="contacter_phone_unique"/>
                      <field name="contacter_cellphone_unique"/>
                      <field name="contacter_chuanzhen_unique"/>
                      <field name="contacter_skype_unique"/>
                      <field name="contacter_whatsapp_unique"/>
                      <field name="contacter_wechat_unique"/>
                      <field name="contacter_qq_unique"/>
                      <field name="contacter_other_unique"/>
                  </group>
                  <group string="销售">
                      <field name="so_jiaohuo_remind"/>
                  </group>
            </form>
        </field>
      </record>

      <!--设置 action-->
      <record id="customer_configuration_act" model="ir.actions.act_window">
          <field name="name">设置</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">configuration</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="res_id">1</field>
      </record>
      <record id="customer_configuration_act_form_ref" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="customer_configuration_form"/>
        <field name="act_window_id" ref="customer_configuration_act"/>
      </record>

  </data>
</odoo>