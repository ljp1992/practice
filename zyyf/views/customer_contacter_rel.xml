    <!-- customer form -->
    <record id="customer_contacter_rel_form" model="ir.ui.view">
        <field name="name">customer_contacter_rel_form</field>
        <field name="model">customer.contact.rel</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="contacter_id" nolabel="1"/>
                        </h1>
                        <h3>
                            <field name="position" placeholder="职位" nolabel="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="cellphone"/>
                            <field name="chuanzhen"/>
                            <!--<field name="position"/>-->
                        </group>
                        <group>
                            <field name="skype"/>
                            <field name="whatsapp"/>
                            <field name="wechat"/>
                            <field name="qq"/>
                            <field name="other"/>
                        </group>
                        <group string="时区">
                            <field name="time_zone"/>
                            <field name="now_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="备注">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

